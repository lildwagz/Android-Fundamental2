<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:cardBackgroundColor="#35ABE9"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Trex Shop"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold" />


        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="Selamat Datang Di Trex Shop"
            android:textColor="#000" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-------------------------------------------------------------------------------------------------" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:background="@color/awal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/form"
            android:paddingBottom="10dp">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Pembeli         : "
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:padding="5dp"
                />

            <EditText
                android:id="@+id/et_NamaPembeli"
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="left"
                android:hint="Masukan Nama anda"
                android:textSize="10dp" />


        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/form"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="142dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:padding="5dp"
                android:text="Judul Buku                : " />

            <EditText
                android:id="@+id/et_JudulBuku"
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="left"
                android:hint="Masukan Juudul Buku anda"
                android:textSize="10dp" />


        </LinearLayout
            >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/form"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="142dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:padding="5dp"
                android:text="Jumlah Beli              : " />

            <EditText
                android:id="@+id/et_JumlahBeli"
                android:layout_width="145dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="left"
                android:padding="5dp"
                android:hint="Masukan Jumlah pembelian"
                android:textSize="10dp"
                android:inputType="number"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/form"
            android:paddingBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harga             RP.      : "
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:padding="5dp"/>

            <EditText
                android:id="@+id/et_Harga"
                android:layout_width="145dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="left"
                android:padding="5dp"
                android:hint=" Harga Barang"
                android:textSize="10dp"
                android:inputType="number"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/form"
            android:paddingBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yang dibayar Rp       :"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:padding="5dp"/>

            <EditText
                android:id="@+id/et_Dibayar"
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:hint="Uang yang anda bayar   "
                android:textSize="10dp"
                android:gravity="left"
                android:inputType=""/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            >

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                app:cardBackgroundColor="#35ABE9"
                app:cardCornerRadius="10dp">

                <Button
                    android:id="@+id/bt_Kirim"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Send"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:padding="7dp"
                    android:textStyle="bold"

                    />

            </android.support.v7.widget.CardView>

    </LinearLayout>


    </LinearLayout>

</LinearLayout>