<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailBiodata"
    android:padding="20dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data Biodata"
        android:textSize="25sp"
        android:textColor="#FF9800"
        android:textStyle="bold"

        />
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data Berhasil Dikirim"
            android:textSize="19sp"
            android:layout_marginBottom="20dp"
            />
    <TextView
        android:id="@+id/tmp_NamaLengkap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Lengkap"
        android:textSize="15sp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tmp_Tanggal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tanggal"
            android:layout_marginRight="10dp"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/tmp_Bulan"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Bulan"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/tmp_Tahun"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tahun"
            android:textSize="15sp"
            android:layout_marginRight="10dp"/>


    </LinearLayout>
    <TextView
        android:id="@+id/tmp_Kelas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kelas"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/tmp_Jurusan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jurusan"
        android:textSize="15sp"
        />


</LinearLayout>