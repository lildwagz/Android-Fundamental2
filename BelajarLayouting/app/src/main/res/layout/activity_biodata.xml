<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical"
    tools:context=".BiodataActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Aplikasi Biodata"
        android:textColor="#3F51B5"
        android:textSize="12pt"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Penampungan Data Siswa"
        android:textColor="#9C27B0" />

    <EditText
        android:id="@+id/edt_NamaLengkap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Nama Lengkap " />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/edt_Tanggal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tanggal"
            android:layout_marginRight="10dp"/>

        <EditText
            android:id="@+id/edt_Bulan"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Bulan"
            android:layout_marginRight="10dp"/>

        <EditText
            android:id="@+id/edt_Tahun"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tahun"
            android:layout_marginRight="10dp"/>


    </LinearLayout>


    <EditText
        android:id="@+id/edt_Kelas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Kelas"/>

    <EditText
        android:id="@+id/edt_Jurusan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Jurusan " />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        >

        <Button
            android:id="@+id/btn_TampilkanInputan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View"
            android:layout_marginRight="20dp"
            />

        <Button
            android:id="@+id/btn_Hapus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hapus" />


    </LinearLayout>


</LinearLayout>